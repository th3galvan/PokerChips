<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="galvan.pokerchips">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GameActivity"
            android:screenOrientation="reverseLandscape">
            // NECESARIO PARA MODO SOLO HORIZONTAL
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".JoinGameActivity" />
        <activity android:name=".ModeGameActivity" />
        <activity android:name=".PlayersListActivity" />
        <activity android:name=".SetGameActivity" />
        <activity android:name=".ShowCodeActivity" />
    </application>

</manifest>