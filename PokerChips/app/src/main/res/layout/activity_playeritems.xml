<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/player_big"
        android:layout_alignEnd="@+id/player_big"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/player_small"
        android:layout_alignEnd="@+id/txt_name"
        android:layout_alignRight="@+id/txt_name"
        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/chips" />

    <CheckBox
        android:id="@+id/player_dealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_column="1"
        android:layout_row="1"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/dealer"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/player_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_toEndOf="@+id/player_small"
        android:layout_toRightOf="@+id/player_small"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/big"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/player_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_toEndOf="@+id/player_out"
        android:layout_toRightOf="@+id/player_out"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/small"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/player_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_toEndOf="@+id/player_dealer"
        android:layout_toRightOf="@+id/player_dealer"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/out"
        android:textSize="12sp" />
</GridLayout>