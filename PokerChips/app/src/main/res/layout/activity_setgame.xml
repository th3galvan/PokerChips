<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_host_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_host_name"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/edit_host_name"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="22dp"
        android:text="ESCRIBE TU NOMBRE" />

    <EditText
        android:id="@+id/edit_host_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_host_name"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_players_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nº JUGADORES"
        android:layout_above="@+id/edit_players_number"
        android:layout_alignRight="@+id/txt_host_name"
        android:layout_alignEnd="@+id/txt_host_name"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <EditText
        android:id="@+id/edit_players_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_host_name"
        android:layout_alignStart="@+id/edit_host_name"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_initial_chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nº FICHAS POR JUGADOR"
        android:layout_above="@+id/edit_initial_chips"
        android:layout_alignRight="@+id/edit_initial_chips"
        android:layout_alignEnd="@+id/edit_initial_chips"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <EditText
        android:id="@+id/edit_initial_chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_done_gotoqr"
        android:layout_alignLeft="@+id/edit_players_number"
        android:layout_alignStart="@+id/edit_players_number"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_first_big_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="VALOR INICIAL BIG BLIND"
        android:layout_above="@+id/edit_host_name"
        android:layout_alignRight="@+id/edit_first_big_value"
        android:layout_alignEnd="@+id/edit_first_big_value" />

    <EditText
        android:id="@+id/edit_first_big_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_first_big_value"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_big_freq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_players_number"
        android:layout_alignLeft="@+id/edit_big_freq"
        android:layout_alignStart="@+id/edit_big_freq"
        android:paddingLeft="8dp"
        android:text="FRECUENCIA SUBIDA BIG BLIND" />

    <EditText
        android:id="@+id/edit_big_freq"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_first_big_value"
        android:layout_alignStart="@+id/edit_first_big_value"
        android:layout_below="@+id/txt_big_freq"
        android:layout_toLeftOf="@+id/txt_unity"
        android:layout_toStartOf="@+id/txt_unity"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_big_change_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VALOR SUBIDA BIG BLIND"
        android:layout_above="@+id/edit_initial_chips"
        android:layout_alignRight="@+id/txt_first_big_value"
        android:layout_alignEnd="@+id/txt_first_big_value" />

    <EditText
        android:id="@+id/edit_big_change_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_big_freq"
        android:layout_alignStart="@+id/edit_big_freq"
        android:layout_below="@+id/txt_big_change_value"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_done_gotoqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="HECHO" />

    <TextView
        android:id="@+id/txt_unity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/edit_big_freq"
        android:layout_alignBottom="@+id/edit_big_freq"
        android:layout_toRightOf="@+id/txt_big_change_value"
        android:layout_toEndOf="@+id/txt_big_change_value" />
</RelativeLayout>